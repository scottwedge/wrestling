@require './../styles/variables'
@require './../styles/helpers'

#long
	position fixed
	top 0
	left 0
	z-index 1000
	display none
	overflow-y auto
	padding 1rem
	width 100%
	height 100vh
	background-color $bg

	&.visible
		display block

	button
		position fixed
		top 1rem
		right 2rem

	.story
		display none

		&.visible
			display block