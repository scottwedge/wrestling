@require './../styles/variables'
@require './../styles/helpers'

.wrestler
	position absolute
	top $thumb-size * -1.5
	left 0
	margin 0
	width $thumb-size-sm
	height $thumb-size-sm
	background-color $white
	opacity 0.85
	transition top 0.5s, left 0.5s 0.5s, transform 0.125s, opacity 0.125s

	+mq('bp-960')
		width $thumb-size
		height $thumb-size

	+hover()
		&:not(.inactive)
			z-index set-index(middle)
			outline 2px solid $accent
			box-shadow 4px 4px 0px 2px $black
			opacity 1
			transform scale(1.125)

	&.inactive
		opacity 0.25

	&.selected
		z-index set-index(middle)
		outline 2px solid $primary
		box-shadow 4px 4px 0px 2px $black
		opacity 1
		transform scale(1.125)

		figure
			opacity 1

figure
	display block
	width 100%
	height 100%
	background-image url('./../assets/images/spritesheet.png')
	opacity 0.85

p
	position absolute
	top 0.25em
	right 0.25em
	margin 0
	color $gray
	text-align right
	font-size 0.5em
	line-height 1
	user-select none