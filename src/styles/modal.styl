@require './../styles/variables'
@require './../styles/helpers'

#modal
	position fixed
	top $header-height
	left 0
	z-index set-index(top)
	visibility hidden
	padding 1rem
	width 960px
	height 100vh
	background-image linear-gradient(lighten($yellow, 35) 0%, lighten($orange, 35) 100%)
	color $off-black
	transform translateX(-100%)
	outline 10px solid black

	&.visible
		visibility visible

	&.reveal
		transform translateX(0)

	+mq('bp-960')
		width 960px
		height 540px
		transform translateX(0)

canvas
	margin 0 auto

.scroll
	overflow-y auto
	padding 1rem 0
	height 13rem

	+mq('bp-640h')
		height 14rem

	+mq('bp-700h')
		height 16rem

p.description
	margin 0
	font-size 0.9em
	line-height 1.4

	+mq('bp-640')
		font-size 1.0625em

.explore-nav
	position absolute
	bottom 0
	left 0
	padding 1rem
	width 100%
	text-align center

	button
		padding 0.75em 0.5em
		max-width 20rem
		background-color lighten($accent, 30)
		box-shadow 2px 2px 0 0 darken($accent, 10)
		color $off-black
		transform translate(0, 0)

		&:hover
			background-color $accent

	+mq('bp-960')
		display none

.story-nav
	position absolute
	bottom 0
	left 0
	display flex
	justify-content space-between
	align-items center
	align-content center
	padding 1rem
	width 100%

	button
		flex 1 0 auto
		padding 0
		width 1.65rem
		height 1.65rem
		border 2px solid darken($accent, 10)
		border-radius 50%

		&.disable
			opacity 0.25
			cursor not-allowed
			pointer-events none

		&.pulse
			animation pulse 2s infinite

	ul
		display flex
		justify-content center
		width 100%

	li
		margin 0 0.5em
		width 0.5em
		height 0.5em
		background $gray

		&.active
			background-color $black

.person
	position absolute
	top 1rem
	left 2rem
	p
		margin 0
		margin-bottom 0.5rem
		line-height 1
		font-size 18px

p.crew
	font-size 14px

p.name
	font-size 36px
	font-weight bold
	margin-top 1rem

.info
	position absolute
	top 1rem
	right 2rem
	p, h4
		margin 0
		line-height 1
		text-align right
	
	h4
		font-size 16px
		text-transform uppercase
		margin-top 1rem

	p
		font-size 24px
		font-weight bold
img
	width 240px
	position absolute
	display block
	bottom 0.5rem
	left 1.5rem
	transform translateY(50%)